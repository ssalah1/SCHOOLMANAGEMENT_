@model List<Teacher>
@{
    ViewData["Title"] = "AllTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container border border-info" >
        <h3 class="text-info text-center">Welcome to All Teachers Page</h3>
        <hr />
        <p>
            <a asp-action="CreateTeacher" asp-controller="Teacher" class="btn btn-sm btn-info"> Add Teacher</a>
        </p>
        <table class="table table-bordered table-hover table-responsive">
            <tr class="thead-light">
                <td> ID </td>
                <td>FName</td>
                <td>LName</td>
                <td>Gender</td>
                <td>Phone</td>
                <td>Email</td>
                <td>Age</td>
                <td>#OfStudents</td>
                <td>Actions</td>
            </tr>
            @foreach (var teacher in Model)
            {
        <tr>
            <td>@teacher.TeacherId</td>
            <td>@teacher.FirstName</td>
            <td>@teacher.LastName</td>
            <td>@teacher.Gender</td>
            <td>@teacher.Gender</td>
            <td>@teacher.Phone</td>
            <td>@teacher.Email</td>
            <td>@teacher.Students?.Count</td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="EditTeacher" asp-route-id="@teacher.TeacherId">Edit</a> |
                <a class="btn btn-sm btn-danger" asp-action="DeleteTeacher" asp-route-id="@teacher.TeacherId" onclick="return confirm('Are you sure you want to delete this teacher?')">Delete</a>
            </td>
        </tr>
            }
        </table>
    </div>

