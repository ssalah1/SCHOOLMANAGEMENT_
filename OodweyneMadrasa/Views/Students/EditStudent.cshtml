@model Student
@{
    ViewData["Title"] = "EditStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border border-info">
    <h3 class="text-info text-center">Edit Student</h3>
    <hr />

    <form asp-action="EditStudent" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        //Existing ID
        @Html.HiddenFor(model => Model.StudentId)
        <div class="row">
            <div class=" col-6">

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>


            </div>

            <div class=" col-6">

                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="" class="disabled active">-Select Gender-</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SubjectId" class="control-label"></label>
                    <select asp-for="SubjectId" class="form-control">
                        <option value="" selected disabled> Please Select Subject</option>
                        @foreach (var course in ViewBag.Courses)
                        {
                            <option value="@course.SubjectId">@course.SubjectName</option>
                        }
                    </select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TeacherId" class="control-label"></label>
                    <select asp-for="TeacherId" class="form-control">
                        <option value="" selected disabled> Please Select Teacher</option>
                        @foreach (var teacher in ViewBag.Teachers)
                        {
                            <option value="@teacher.TeacherId">@teacher.FirstName</option>
                        }
                    </select>
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>

            </div>


            <div class="col-4 offset-4">
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" /> |   <a asp-action="Index">Back to List</a>

                </div>
            </div>


        </div>


    </form>

</div>

